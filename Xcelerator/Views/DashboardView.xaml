<UserControl x:Class="Xcelerator.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xcelerator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF2D2D30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Area -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,10">
                    <Button Content="ContactOrchestrator" 
            Style="{StaticResource NavigationButtonStyle}"
            Command="{Binding SelectModuleCommand}"
            CommandParameter="ContactOrchestrator"
            Margin="0,0,20,0"/>
                    <Button Content="ContactForge" 
            Style="{StaticResource NavigationButtonStyle}"
            Command="{Binding SelectModuleCommand}"
            CommandParameter="ContactForge"
            Margin="0,0,20,0"/>
                    <Button Content="ConnectGrid" 
            Style="{StaticResource NavigationButtonStyle}"
            Command="{Binding SelectModuleCommand}"
            CommandParameter="ConnectGrid"
            Margin="0,0,20,0"/>
                    <Button Content="AgentForge" 
            Style="{StaticResource NavigationButtonStyle}"
            Command="{Binding SelectModuleCommand}"
            CommandParameter="AgentForge"
            Margin="0,0,20,0"/>
                    <Button Content="PulseOps" 
            Style="{StaticResource NavigationButtonStyle}"
            Command="{Binding SelectModuleCommand}"
            CommandParameter="PulseOps"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" 
              Background="White">

            <!-- Content Area -->
            <Grid Background="White">
                <TextBlock Text="Welcome to Xcelerator Dashboard" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF2D2D30"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                
                <!-- Selected Module Display -->
                <TextBlock Text="{Binding SelectedModule, StringFormat='Selected Module: {0}'}" 
                           FontSize="16" 
                           Foreground="#FF666666"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,100"/>
            </Grid>


        </Grid>
    </Grid>
</UserControl>
