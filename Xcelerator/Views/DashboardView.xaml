<UserControl x:Class="Xcelerator.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xcelerator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF2D2D30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <!-- Dashboard Layout - Top navigation + main content area -->
    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <!-- Fixed-height navigation bar at top -->
            <RowDefinition Height="Auto"/>
            <!-- Flexible main content area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Area - Fixed at top with module selection buttons -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side: Agent & Cluster Info (Vertical Layout) -->
                <StackPanel Grid.Column="0" 
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <TextBlock Text="Agent &amp; Cluster Info"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#FF666666"
                               Margin="0,0,0,3"/>
                    <TextBlock FontSize="9" Foreground="#FF2D2D30" Margin="0,1">
                        <Run Text="Agent: "/>
                        <Run Text="{Binding TokenData.IcAgentId, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock FontSize="9" Foreground="#FF2D2D30" Margin="0,1">
                        <Run Text="Cluster: "/>
                        <Run Text="{Binding TokenData.IcClusterId, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock FontSize="9" Foreground="#FF2D2D30" Margin="0,1">
                        <Run Text="User: "/>
                        <Run Text="{Binding UserName, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock FontSize="9" Foreground="#FF2D2D30" Margin="0,1">
                        <Run Text="BU: "/>
                        <Run Text="{Binding BusinessUnit, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <!-- Center: Module Selection Buttons with ScrollViewer -->
                <ScrollViewer Grid.Column="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="LiveLogMonitor" 
                                Style="{StaticResource NavigationButtonStyle}"
                                Command="{Binding SelectModuleCommand}"
                                CommandParameter="LiveLogMonitor"
                                FontSize="15"
                                Padding="15,10"
                                Margin="0,0,10,0"/>
                        <Button Content="ContactForge" 
                                Style="{StaticResource NavigationButtonStyle}"
                                Command="{Binding SelectModuleCommand}"
                                CommandParameter="ContactForge"
                                FontSize="15"
                                Padding="15,10"
                                Margin="0,0,10,0"/>
                        <Button Content="ConnectGrid" 
                                Style="{StaticResource NavigationButtonStyle}"
                                Command="{Binding SelectModuleCommand}"
                                CommandParameter="ConnectGrid"
                                FontSize="15"
                                Padding="15,10"
                                Margin="0,0,10,0"/>
                        <Button Content="AgentForge" 
                                Style="{StaticResource NavigationButtonStyle}"
                                Command="{Binding SelectModuleCommand}"
                                CommandParameter="AgentForge"
                                FontSize="15"
                                Padding="15,10"
                                Margin="0,0,10,0"/>
                        <Button Content="PulseOps" 
                                Style="{StaticResource NavigationButtonStyle}"
                                Command="{Binding SelectModuleCommand}"
                                CommandParameter="PulseOps"
                                FontSize="15"
                                Padding="15,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Content Area - Fills remaining space below navigation -->
        <Grid Grid.Row="1" 
              Background="White"
              Margin="20">

            <!-- Module Content Area - Shows selected module view or welcome message -->
            <ContentPresenter Content="{Binding CurrentModuleViewModel}"
                              Visibility="{Binding CurrentModuleViewModel, Converter={StaticResource NullToVisibilityConverter}}"/>

            <!-- Dashboard Welcome Content - Shown when no module is selected -->
            <Grid Visibility="{Binding CurrentModuleViewModel, Converter={StaticResource NullToVisibilityInvertedConverter}}">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Welcome to Xcelerator Dashboard" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#FF2D2D30"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>
                    
                    <!-- Selected Module Display -->
                    <TextBlock Text="Select a module from the navigation bar above" 
                               FontSize="16" 
                               Foreground="#FF666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
