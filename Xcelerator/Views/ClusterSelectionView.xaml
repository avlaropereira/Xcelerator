<UserControl x:Class="Xcelerator.Views.ClusterSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xcelerator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cluster Tag Style -->
        <Style x:Key="ClusterTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFE3F2FD"/>
            <Setter Property="BorderBrush" Value="#FF2196F3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <!-- Cluster List Item Style -->
        <Style x:Key="ClusterListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Grid.Column="0" 
                Background="#FFF8F9FA" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="0,0,1,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Row="0" 
                           Text="Xcelerator" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,20"/>

                <!-- Cluster Label -->
                <TextBlock Grid.Row="1" 
                           Text="Cluster" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,8"/>

                <!-- Available Clusters -->
                <ListBox Grid.Row="2" 
                         x:Name="AvailableClustersList"
                         ItemsSource="{Binding AvailableClusters}"
                         ItemContainerStyle="{StaticResource ClusterListItemStyle}"
                         MaxHeight="200"
                         Margin="0,0,0,16">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" 
                                       FontSize="13"
                                       Foreground="#FF2D2D30"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Selected Clusters -->
                <ScrollViewer Grid.Row="3" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,0,0,16">
                    <WrapPanel>
                        <ItemsControl ItemsSource="{Binding SelectedClusters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ClusterTagStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding DisplayName}" 
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF1976D2"
                                                       VerticalAlignment="Center"/>
                                            <Button Grid.Column="1" 
                                                    Content="âœ•" 
                                                    Width="16" 
                                                    Height="16"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#FF1976D2"
                                                    FontSize="10"
                                                    Margin="8,0,0,0"
                                                    Command="{Binding DataContext.DeselectClusterCommand, 
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </ScrollViewer>

                <!-- Continue Button -->
                <Button Grid.Row="4" 
                        Content="Continue" 
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding ContinueCommand}"
                        HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>

        <!-- Center Area -->
        <Grid Grid.Column="1" 
              Background="Transparent">
            <TextBlock Text="Xcelerator" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="#FF2D2D30"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
