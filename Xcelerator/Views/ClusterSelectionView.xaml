<UserControl x:Class="Xcelerator.Views.ClusterSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:local="clr-namespace:Xcelerator.Views"
              xmlns:converters="clr-namespace:Xcelerator.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cluster Tag Style -->
        <Style x:Key="ClusterTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFE3F2FD"/>
            <Setter Property="BorderBrush" Value="#FF2196F3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <!-- Cluster List Item Style -->
        <Style x:Key="ClusterListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
                 </Style>

         <!-- TextBox Style -->
         <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
             <Setter Property="Background" Value="White"/>
             <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="Padding" Value="12,8"/>
             <Setter Property="FontSize" Value="14"/>
             <Setter Property="Template">
                 <Setter.Value>
                     <ControlTemplate TargetType="TextBox">
                         <Border Background="{TemplateBinding Background}" 
                                 BorderBrush="{TemplateBinding BorderBrush}" 
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="6">
                             <ScrollViewer x:Name="PART_ContentHost" 
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"/>
                         </Border>
                         <ControlTemplate.Triggers>
                             <Trigger Property="IsFocused" Value="True">
                                 <Setter Property="BorderBrush" Value="#FF0078D4"/>
                             </Trigger>
                             <Trigger Property="IsMouseOver" Value="True">
                                 <Setter Property="BorderBrush" Value="#FF999999"/>
                             </Trigger>
                         </ControlTemplate.Triggers>
                     </ControlTemplate>
                 </Setter.Value>
             </Setter>
         </Style>

         <!-- PasswordBox Style -->
         <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
             <Setter Property="Background" Value="White"/>
             <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="Padding" Value="12,8"/>
             <Setter Property="FontSize" Value="14"/>
             <Setter Property="Template">
                 <Setter.Value>
                     <ControlTemplate TargetType="PasswordBox">
                         <Border Background="{TemplateBinding Background}" 
                                 BorderBrush="{TemplateBinding BorderBrush}" 
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="6">
                             <ScrollViewer x:Name="PART_ContentHost" 
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"/>
                         </Border>
                         <ControlTemplate.Triggers>
                             <Trigger Property="IsFocused" Value="True">
                                 <Setter Property="BorderBrush" Value="#FF0078D4"/>
                             </Trigger>
                             <Trigger Property="IsMouseOver" Value="True">
                                 <Setter Property="BorderBrush" Value="#FF999999"/>
                             </Trigger>
                         </ControlTemplate.Triggers>
                     </ControlTemplate>
                 </Setter.Value>
             </Setter>
         </Style>

         <!-- Navigation Button Style -->
         <Style x:Key="NavigationButtonStyle" TargetType="Button">
             <Setter Property="Background" Value="Transparent"/>
             <Setter Property="Foreground" Value="#FF2D2D30"/>
             <Setter Property="BorderThickness" Value="0"/>
             <Setter Property="Padding" Value="20,12"/>
             <Setter Property="FontSize" Value="14"/>
             <Setter Property="FontWeight" Value="SemiBold"/>
             <Setter Property="HorizontalContentAlignment" Value="Center"/>
             <Setter Property="Cursor" Value="Hand"/>
             <Setter Property="Template">
                 <Setter.Value>
                     <ControlTemplate TargetType="Button">
                         <Border Background="{TemplateBinding Background}" 
                                 CornerRadius="8"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 BorderBrush="{TemplateBinding BorderBrush}">
                             <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                               VerticalAlignment="Center"
                                               Margin="{TemplateBinding Padding}"/>
                         </Border>
                         <ControlTemplate.Triggers>
                             <Trigger Property="IsMouseOver" Value="True">
                                 <Setter Property="Background" Value="#FFF0F0F0"/>
                             </Trigger>
                             <Trigger Property="IsPressed" Value="True">
                                 <Setter Property="Background" Value="#FFE0E0E0"/>
                             </Trigger>
                         </ControlTemplate.Triggers>
                     </ControlTemplate>
                 </Setter.Value>
             </Setter>
         </Style>

         <!-- Visibility Converters -->
         <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
         <converters:CountToVisibilityInvertedConverter x:Key="CountToVisibilityInvertedConverter"/>
         <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
         <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
         <converters:LoginFormVisibilityConverter x:Key="LoginFormVisibilityConverter"/>
     </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Grid.Column="0" 
                Background="#FFF8F9FA" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="0,0,1,0" Margin="0,0,110,0">
            <Grid Margin="16">
                                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                 </Grid.RowDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Row="0" 
                           Text="Xcelerator" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,16"/>

                <!-- Cluster Label -->
                <TextBlock Grid.Row="1" 
                           Text="Cluster" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,8"/>

                <!-- Available Clusters -->
                <ListBox Grid.Row="2" 
                         x:Name="AvailableClustersList"
                         ItemsSource="{Binding AvailableClusters}"
                         ItemContainerStyle="{StaticResource ClusterListItemStyle}"
                         MaxHeight="200"
                         Margin="0,0,0,16">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" 
                                       FontSize="13"
                                       Foreground="#FF2D2D30"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Selected Clusters -->
                <ScrollViewer Grid.Row="3" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,0,0,16">
                    <WrapPanel>
                        <ItemsControl ItemsSource="{Binding SelectedClusters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                                                         <Border Style="{StaticResource ClusterTagStyle}">
                                         <Grid>
                                             <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="*"/>
                                                 <ColumnDefinition Width="Auto"/>
                                             </Grid.ColumnDefinitions>
                                             <Button Grid.Column="0" 
                                                     Content="{Binding DisplayName}"
                                                     FontSize="12"
                                                     FontWeight="SemiBold"
                                                     Foreground="#FF1976D2"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     HorizontalContentAlignment="Left"
                                                     Command="{Binding DataContext.TagClickCommand, 
                                                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                     CommandParameter="{Binding}"/>
                                             <Button Grid.Column="1" 
                                                     Content="✕" 
                                                     Width="16" 
                                                     Height="16"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#FF1976D2"
                                                     FontSize="10"
                                                     Margin="8,0,0,0"
                                                     Command="{Binding DataContext.DeselectClusterCommand, 
                                                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                     CommandParameter="{Binding}"/>
                                         </Grid>
                                     </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </ScrollViewer>

                
            </Grid>
        </Border>

                 <!-- Right Area - Login Form or Dashboard (shown when clusters are selected) -->
         <Grid Grid.Column="1" 
               Background="Transparent">
             <Grid.RowDefinitions>
                 <RowDefinition Height="*"/>
                 <RowDefinition Height="Auto"/>
                 <RowDefinition Height="*"/>
             </Grid.RowDefinitions>

             <!-- Login Form -->
             <Border Grid.Row="1" 
                     Background="White" 
                     CornerRadius="12"
                     BorderBrush="#FFE0E0E0"
                     BorderThickness="1"
                     MaxWidth="400"
                     MaxHeight="400"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Visibility="{Binding ShowLoginForm, Converter={StaticResource BoolToVisibilityConverter}}"
                     Width="386">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                      Direction="270" 
                                      ShadowDepth="2" 
                                      Opacity="0.1" 
                                      BlurRadius="8"/>
                </Border.Effect>
                
                                 <Grid Margin="40">
                     <Grid.RowDefinitions>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>

                     <!-- Login Logo Placeholder -->
                     <TextBlock Grid.Row="0" 
                                Text="login logo" 
                                FontSize="18" 
                                FontWeight="SemiBold" 
                                Foreground="#FF666666"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10"/>
                     
                     <!-- Selected Cluster Name -->
                     <TextBlock Grid.Row="1" 
                                Text="{Binding SelectedClusterForLogin.DisplayName, StringFormat='Login for {0}'}"
                                FontSize="16" 
                                FontWeight="SemiBold" 
                                Foreground="#FF2D2D30"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20"/>

                                         <!-- Access Key Label -->
                     <TextBlock Grid.Row="2" 
                                Text="Access key inputs" 
                                FontSize="14" 
                                FontWeight="SemiBold" 
                                Foreground="#FF2D2D30"
                                Margin="0,0,0,8"/>

                     <!-- Access Key Input -->
                     <TextBox Grid.Row="3" 
                              Style="{StaticResource ModernTextBoxStyle}"
                              Text="{Binding AccessKey, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,0,0,16"/>

                     <!-- Secret Key Label -->
                     <TextBlock Grid.Row="4" 
                                Text="Secret key inputs" 
                                FontSize="14" 
                                FontWeight="SemiBold" 
                                Foreground="#FF2D2D30"
                                Margin="0,0,0,8"/>

                     <!-- Secret Key Input -->
                     <PasswordBox Grid.Row="5" 
                                  x:Name="SecretKeyPasswordBox"
                                  Style="{StaticResource ModernPasswordBoxStyle}"
                                  Margin="0,0,0,24"/>

                     <!-- Sign In Button -->
                     <Button Grid.Row="6" 
                             Content="Sign in" 
                             Style="{StaticResource ModernButtonStyle}"
                             Command="{Binding SignInCommand}"
                             HorizontalAlignment="Stretch"/>
                                 </Grid>
             </Border>

             <!-- Dashboard Content -->
             <Grid Grid.Row="1" 
                   Background="White"
                   Visibility="{Binding IsInDashboardMode, Converter={StaticResource BoolToVisibilityConverter}}">
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                 </Grid.RowDefinitions>

                 <!-- Navigation Options at Top -->
                 <Border Grid.Row="0" 
                         Background="White" 
                         BorderBrush="#FFE0E0E0" 
                         BorderThickness="0,0,0,1"
                         Padding="20">
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="Auto"/>
                         </Grid.RowDefinitions>

                         <!-- First Row of Options -->
                         <StackPanel Grid.Row="0" 
                                     Orientation="Horizontal" 
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,10">
                             <Button Content="ContactOrchestrator" 
                                     Style="{StaticResource NavigationButtonStyle}"
                                     Command="{Binding SelectModuleCommand}"
                                     CommandParameter="ContactOrchestrator"
                                     Margin="0,0,20,0"/>
                             <Button Content="ContactForge" 
                                     Style="{StaticResource NavigationButtonStyle}"
                                     Command="{Binding SelectModuleCommand}"
                                     CommandParameter="ContactForge"
                                     Margin="0,0,20,0"/>
                             <Button Content="ConnectGrid" 
                                     Style="{StaticResource NavigationButtonStyle}"
                                     Command="{Binding SelectModuleCommand}"
                                     CommandParameter="ConnectGrid"/>
                         </StackPanel>

                         <!-- Second Row of Options -->
                         <StackPanel Grid.Row="1" 
                                     Orientation="Horizontal" 
                                     HorizontalAlignment="Center">
                             <Button Content="AgentForge" 
                                     Style="{StaticResource NavigationButtonStyle}"
                                     Command="{Binding SelectModuleCommand}"
                                     CommandParameter="AgentForge"
                                     Margin="0,0,20,0"/>
                             <Button Content="PulseOps" 
                                     Style="{StaticResource NavigationButtonStyle}"
                                     Command="{Binding SelectModuleCommand}"
                                     CommandParameter="PulseOps"/>
                         </StackPanel>
                     </Grid>
                 </Border>

                 <!-- Dashboard Content Area -->
                 <Grid Grid.Row="1" 
                       Background="White">
                     <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="*"/>
                         <ColumnDefinition Width="Auto"/>
                     </Grid.ColumnDefinitions>

                     <!-- Main Dashboard Content -->
                     <Grid Grid.Column="0" 
                           Background="White">
                         <TextBlock Text="Welcome to Xcelerator Dashboard" 
                                    FontSize="24" 
                                    FontWeight="Bold" 
                                    Foreground="#FF2D2D30"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>

                         <!-- Selected Module Display -->
                         <TextBlock Text="{Binding SelectedModule, StringFormat='Selected Module: {0}'}" 
                                    FontSize="16" 
                                    Foreground="#FF666666"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,100"/>
                     </Grid>

                     <!-- Back Button -->
                     <Button Grid.Column="1" 
                             Content="←" 
                             Style="{StaticResource ModernButtonStyle}"
                             Command="{Binding GoBackFromDashboardCommand}"
                             Width="50"
                             Height="50"
                             FontSize="20"
                             Margin="20"
                             VerticalAlignment="Top"/>
                 </Grid>
             </Grid>

             <!-- Default Center Text (shown when no clusters selected) -->
             <TextBlock Grid.Row="1" 
                        Text="Xcelerator" 
                        FontSize="48" 
                        FontWeight="Bold" 
                        Foreground="#FF2D2D30"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="{Binding SelectedClusters.Count, Converter={StaticResource CountToVisibilityInvertedConverter}}"/>
        </Grid>
    </Grid>
</UserControl>
