<UserControl x:Class="Xcelerator.Views.PanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xcelerator.Views"
             xmlns:viewmodels="clr-namespace:Xcelerator.ViewModels"
             xmlns:converters="clr-namespace:Xcelerator.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

                 <!-- Cluster Tag Style -->
         <Style x:Key="ClusterTagStyle" TargetType="Border">
             <Setter Property="Background" Value="#FFE3F2FD"/>
             <Setter Property="BorderBrush" Value="#FF2196F3"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="CornerRadius" Value="16"/>
             <Setter Property="Padding" Value="12,6"/>
             <Setter Property="Margin" Value="0,2"/>
             <Setter Property="HorizontalAlignment" Value="Stretch"/>
             <Setter Property="MinWidth" Value="200"/>
         </Style>

        <!-- Cluster List Item Style -->
        <Style x:Key="ClusterListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF2D2D30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                 CornerRadius="8"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                               VerticalAlignment="Center"
                                               Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Visibility Converters -->
        <converters:CountToVisibilityInvertedConverter x:Key="CountToVisibilityInvertedConverter"/>
    </UserControl.Resources>

    <!-- Main Layout Grid - Responsive two-column layout -->
    <Grid>
        <!-- Column Definitions -->
        <Grid.ColumnDefinitions>
            <!-- Fixed-width left panel for cluster selection -->
            <ColumnDefinition Width="250"/>
            <!-- Flexible right panel for dynamic content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Fixed-width cluster selection area -->
        <Border Grid.Column="0" 
                Background="#FFF8F9FA" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="0,0,1,0" 
                Margin="0,0,5,0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Row="0" 
                           Text="Xcelerator" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,16"/>

                <!-- Cluster Label -->
                <TextBlock Grid.Row="1" 
                           Text="Cluster" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,8"/>

                <!-- Available Clusters -->
                <ListBox Grid.Row="2" 
                         x:Name="AvailableClustersList"
                         ItemsSource="{Binding AvailableClusters}"
                         ItemContainerStyle="{StaticResource ClusterListItemStyle}"
                         MaxHeight="200"
                         Margin="0,0,0,16">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" 
                                       FontSize="13"
                                       Foreground="#FF2D2D30"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                                 <!-- Selected Clusters -->
                 <ScrollViewer Grid.Row="3" 
                               VerticalScrollBarVisibility="Auto"
                               Margin="0,0,0,16">
                     <WrapPanel>
                         <ItemsControl ItemsSource="{Binding SelectedClusters}" 
                                       HorizontalAlignment="Stretch">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                     <Border Style="{StaticResource ClusterTagStyle}" 
                                             HorizontalAlignment="Stretch">
                                         <Grid>
                                             <Grid.ColumnDefinitions>
                                                 <!-- Content: Takes most of the space -->
                                                 <ColumnDefinition Width="*"/>
                                                 <!-- Close Button: Fixed width -->
                                                 <ColumnDefinition Width="Auto"/>
                                             </Grid.ColumnDefinitions>
                                             <Button Grid.Column="0" 
                                                 Content="{Binding DisplayName}"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 Foreground="#FF1976D2"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 Command="{Binding DataContext.TagClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                 CommandParameter="{Binding}"/>
                                             <Button Grid.Column="1" 
                                                  BorderThickness="0"
                                                  Foreground="Red"
                                                  Width="24"
                                                  Height="24"
                                                  Padding="0"
                                                  BorderBrush="{x:Null}"
                                                  Background="{x:Null}"
                                                  Style="{StaticResource MaterialDesignFloatingActionButton}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Command="{Binding DataContext.DeselectClusterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="TrashCan" Width="16" Height="16" />
                                            </Button>
                                         </Grid>
                                     </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Right Area - Dynamic content that fills all available space -->
        <Grid Grid.Column="1" 
               Background="Transparent">
            
            <!-- Dynamic Content Area - Stretches to fill entire right panel -->
            <ContentControl Content="{Binding CurrentViewModel}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                <ContentControl.Resources>
                    <!-- Data Templates for View-ViewModel mapping -->
                    <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
                        <local:DashboardView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                        <local:LoginView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>

            <!-- Default Center Text (shown when no clusters selected) -->
            <TextBlock Text="Xcelerator" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="#FF2D2D30"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="{Binding SelectedClusters.Count, Converter={StaticResource CountToVisibilityInvertedConverter}}"/>
        </Grid>
    </Grid>
</UserControl>
