<UserControl x:Class="Xcelerator.Views.LiveLogMonitorView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:Xcelerator.Views"
xmlns:viewmodels="clr-namespace:Xcelerator.ViewModels"
xmlns:converters="clr-namespace:Xcelerator.Converters"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
mc:Ignorable="d" 
d:DesignHeight="650" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:CountToVisibilityInvertedConverter x:Key="CountToVisibilityInvertedConverter"/>
    </UserControl.Resources>
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Machine List Panel (Left Side) -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="0,0,1,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Title -->
                <TextBlock Grid.Row="0"
                           Text="Search in Logs"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,15"/>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="??"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   VerticalAlignment="Center"
                                   Margin="8,0,5,0"/>
                        
                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Padding="0,8"
                                 FontSize="12"
                                 Foreground="#FF2D2D30"/>
                    </Grid>
                </Border>

                <!-- Regex Toggle and Match Count -->
                <Grid Grid.Row="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Regex Toggle -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsRegexMode}"
                              Content="Regex Mode"
                              FontSize="11"
                              Foreground="#FF666666"
                              VerticalAlignment="Center"/>
                    
                    <!-- Match Count -->
                    <TextBlock Grid.Column="1"
                               FontSize="11"
                               Foreground="#FF0078D4"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center">
                        <Run Text="{Binding MatchCount, Mode=OneWay}"/>
                        <Run Text=" matches"/>
                    </TextBlock>
                </Grid>

                <!-- Search Results List -->
                <Border Grid.Row="3"
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4">
                    <Grid>
                        <!-- Loading/Searching Indicator -->
                        <TextBlock Text="Searching..."
                                   FontSize="12"
                                   Foreground="#FF666666"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <!-- Empty State -->
                        <TextBlock Text="Enter search text to find log entries across all open tabs"
                                   FontSize="12"
                                   Foreground="#FF999999"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="20"
                                   Visibility="{Binding SearchResults.Count, Converter={StaticResource CountToVisibilityInvertedConverter}}"/>
                        
                        <!-- Search Results ListBox -->
                        <ListBox ItemsSource="{Binding SearchResults}"
                                 SelectedItem="{Binding SelectedSearchResult}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Visibility="{Binding SearchResults.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                            Padding="8,6"
                                            Margin="0,1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Tab Name and Line Number -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,2">
                                                <TextBlock Text="["
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="#FF0078D4"/>
                                                <TextBlock Text="{Binding TabName}"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="#FF0078D4"/>
                                                <TextBlock Text="]"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="#FF0078D4"/>
                                                <TextBlock Text=" Line "
                                                           FontSize="10"
                                                           Foreground="#FF666666"
                                                           Margin="4,0,0,0"/>
                                                <TextBlock Text="{Binding LineNumber}"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="#FF666666"/>
                                            </StackPanel>
                                            
                                            <!-- Preview Text -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding Preview}"
                                                       FontSize="11"
                                                       FontFamily="Consolas"
                                                       Foreground="#FF2D2D30"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Preview}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <EventSetter Event="MouseDoubleClick" Handler="SearchResult_MouseDoubleClick"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFE3F2FD"/>
                                            <Setter Property="Foreground" Value="#FF2D2D30"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF0F0F0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Remote Machines Section -->
                <TextBlock Grid.Row="4"
                           Text="Remote Machines"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#FF2D2D30"
                           Margin="0,20,0,10"/>

                <Border Grid.Row="5"
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        MaxHeight="250">
                    <TreeView ItemsSource="{Binding RemoteMachines}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.Resources>
                            <!-- Style for TreeViewItem -->
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Foreground" Value="#FF2D2D30"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="materialDesign:TreeViewAssist.HasNoItemsExpanderVisibility" Value="Collapsed"/>
                                <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Item Content -->
                                                <Border x:Name="ItemBorder"
                                                        Grid.Row="0"
                                                        Background="Transparent"
                                                        Padding="8,6"
                                                        Margin="0,1"
                                                        CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Expander Toggle (only for items with children) -->
                                                        <ToggleButton x:Name="Expander"
                                                                      Grid.Column="0"
                                                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                                      ClickMode="Press"
                                                                      Width="16"
                                                                      Height="16"
                                                                      Margin="0,0,4,0"
                                                                      VerticalAlignment="Center"
                                                                      Visibility="{Binding HasChildren, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <ToggleButton.Style>
                                                                <Style TargetType="ToggleButton">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ToggleButton">
                                                                                <Border Background="Transparent">
                                                                                    <materialDesign:PackIcon x:Name="ExpanderIcon"
                                                                                                            Kind="Server"
                                                                                                            Width="16"
                                                                                                            Height="16"
                                                                                                            Foreground="#FF666666"
                                                                                                            HorizontalAlignment="Center"
                                                                                                            VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsChecked" Value="True">
                                                                                        <Setter TargetName="ExpanderIcon" Property="Foreground" Value="#FF0078D4"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ToggleButton.Style>
                                                        </ToggleButton>
                                                        
                                                        <!-- Remote Desktop Icon (only for leaf items without children) -->
                                                        <materialDesign:PackIcon Grid.Column="1"
                                                                                 Kind="RemoteDesktop"
                                                                                 Width="16"
                                                                                 Height="16"
                                                                                 Foreground="#FF666666"
                                                                                 Margin="0,0,8,0"
                                                                                 VerticalAlignment="Center"
                                                                                 Visibility="{Binding IsLeaf, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        
                                                        <!-- Machine Name -->
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding DisplayName}"
                                                                   FontSize="13"
                                                                   FontWeight="Medium"
                                                                   Foreground="#FF2D2D30"
                                                                   VerticalAlignment="Center"/>
                                                        
                                                        <!-- Status Indicator Dot (only for leaf items without children) -->
                                                        <Ellipse Grid.Column="3"
                                                                 Width="8"
                                                                 Height="8"
                                                                 Margin="8,0,0,0"
                                                                 VerticalAlignment="Center"
                                                                 HorizontalAlignment="Right"
                                                                 Visibility="{Binding IsLeaf, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Fill" Value="#FFF44336"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                                            <Setter Property="Fill" Value="#FF4CAF50"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>
                                                    </Grid>
                                                </Border>
                                                
                                                <!-- Children Container -->
                                                <ItemsPresenter x:Name="ItemsHost"
                                                               Grid.Row="1"
                                                               Margin="20,0,0,0"
                                                               Visibility="Collapsed"/>
                                            </Grid>
                                            
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="True">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#FFE3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#FFF5F5F5"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding HasChildren}" Value="False">
                                                    <Setter TargetName="Expander" Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.Resources>
                        
                        <!-- Hierarchical Data Template -->
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <ContentPresenter Content="{Binding}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Border>
            </Grid>
        </Border>

        <!-- Log Display Area with Tabbed Interface -->
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                CornerRadius="8"
                Margin="15,0,0,0">
            <Grid>
                <!-- TabControl for multiple log tabs -->
                <TabControl ItemsSource="{Binding OpenTabs}"
                            BorderThickness="0"
                            Background="Transparent"
                            Padding="5">
                    <TabControl.Template>
                        <ControlTemplate TargetType="TabControl">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Tab Headers with Scroll -->
                                <ScrollViewer Grid.Row="0"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Disabled"
                                            Margin="0,0,0,2">
                                    <TabPanel IsItemsHost="True"
                                            Background="Transparent"/>
                                </ScrollViewer>
                                
                                <!-- Tab Content -->
                                <Border Grid.Row="1"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter ContentSource="SelectedContent"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </TabControl.Template>
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="Margin" Value="0,0,2,0"/>
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Tab Header Text -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding HeaderName}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            
                                            <!-- Close Button -->
                                            <Button Grid.Column="1"
                                                    Width="16"
                                                    Height="16"
                                                    Padding="0"
                                                    VerticalAlignment="Center"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="2"
                                                                Padding="2">
                                                            <Path Data="M0,0 L8,8 M8,0 L0,8"
                                                                  Stroke="#FF666666"
                                                                  StrokeThickness="1.5"
                                                                  Stretch="Uniform"
                                                                  Width="8"
                                                                  Height="8"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFDDDDDD"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="TabBorder"
                                                Background="#FFF5F5F5"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="1,1,1,0"
                                                CornerRadius="4,4,0,0"
                                                Padding="{TemplateBinding Padding}"
                                                Margin="{TemplateBinding Margin}">
                                            <ContentPresenter ContentSource="Header"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="TabBorder" Property="Background" Value="White"/>
                                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#FF0078D4"/>
                                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="1,2,1,0"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="TabBorder" Property="Background" Value="#FFECECEC"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.ItemContainerStyle>
                    <TabControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type viewmodels:LogTabViewModel}">
                            <local:LogMonitorView DataContext="{Binding}"/>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
