<UserControl x:Class="Xcelerator.Views.LiveLogMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xcelerator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Controls Panel -->
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Background="#FFF5F5F5" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Log Monitor Controls"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#FF2D2D30"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- Status Display -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <TextBlock Text="Status: "
                               FontSize="12"
                               Foreground="#FF666666"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Status}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#FF2D2D30"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Machine List Panel (Left Side) -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="0,0,1,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="Machines"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,15"/>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="??"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   VerticalAlignment="Center"
                                   Margin="8,0,5,0"/>
                        
                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Padding="0,8"
                                 FontSize="12"
                                 Foreground="#FF2D2D30"/>
                    </Grid>
                </Border>

                <!-- Regex Toggle and Match Count -->
                <Grid Grid.Row="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Regex Toggle -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsRegexMode}"
                              Content="Regex Mode"
                              FontSize="11"
                              Foreground="#FF666666"
                              VerticalAlignment="Center"/>
                    
                    <!-- Match Count -->
                    <TextBlock Grid.Column="1"
                               FontSize="11"
                               Foreground="#FF0078D4"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center">
                        <Run Text="{Binding MatchCount, Mode=OneWay}"/>
                        <Run Text=" matches"/>
                    </TextBlock>
                </Grid>

                <!-- Machine List -->
                <Border Grid.Row="3"
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ListBox ItemsSource="{Binding FilteredMachines}"
                             SelectedItem="{Binding SelectedMachine}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        Padding="8,6"
                                        Margin="0,1">
                                    <TextBlock Text="{Binding}"
                                               FontSize="12"
                                               Foreground="#FF2D2D30"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Border>
            </Grid>
        </Border>

        <!-- Log Display Area -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                CornerRadius="8"
                Margin="15,0,0,0">
            <Grid>
                <!-- Log Output TextBox -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Padding="10">
                    <TextBlock Text="{Binding LogContent}"
                               FontFamily="Consolas"
                               FontSize="12"
                               Foreground="#FF2D2D30"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <!-- Placeholder when no logs -->
                <TextBlock Text="No logs available. Start monitoring to see live logs."
                           FontSize="14"
                           Foreground="#FF999999"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding HasLogs, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
