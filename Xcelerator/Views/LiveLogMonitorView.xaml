<UserControl x:Class="Xcelerator.Views.LiveLogMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xcelerator.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Controls Panel -->
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Background="#FFF5F5F5" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Log Monitor Controls"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#FF2D2D30"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>

                <!-- Status Display -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <TextBlock Text="Status: "
                               FontSize="12"
                               Foreground="#FF666666"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Status}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#FF2D2D30"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Machine List Panel (Left Side) -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="0,0,1,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="Machines"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#FF2D2D30"
                           Margin="0,0,0,15"/>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="??"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   VerticalAlignment="Center"
                                   Margin="8,0,5,0"/>
                        
                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Padding="0,8"
                                 FontSize="12"
                                 Foreground="#FF2D2D30"/>
                    </Grid>
                </Border>

                <!-- Regex Toggle and Match Count -->
                <Grid Grid.Row="2"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Regex Toggle -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsRegexMode}"
                              Content="Regex Mode"
                              FontSize="11"
                              Foreground="#FF666666"
                              VerticalAlignment="Center"/>
                    
                    <!-- Match Count -->
                    <TextBlock Grid.Column="1"
                               FontSize="11"
                               Foreground="#FF0078D4"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center">
                        <Run Text="{Binding MatchCount, Mode=OneWay}"/>
                        <Run Text=" matches"/>
                    </TextBlock>
                </Grid>

                <!-- Machine List -->
                <Border Grid.Row="3"
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ListBox ItemsSource="{Binding FilteredMachines}"
                             SelectedItem="{Binding SelectedMachine}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        Padding="8,6"
                                        Margin="0,1">
                                    <TextBlock Text="{Binding}"
                                               FontSize="12"
                                               Foreground="#FF2D2D30"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Border>

                <!-- Remote Machines Section -->
                <TextBlock Grid.Row="4"
                           Text="Remote Machines"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#FF2D2D30"
                           Margin="0,20,0,10"/>

                <Border Grid.Row="5"
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        MaxHeight="250">
                    <TreeView ItemsSource="{Binding RemoteMachines}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.Resources>
                            <!-- Style for TreeViewItem -->
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Item Content -->
                                                <Border x:Name="ItemBorder"
                                                        Grid.Row="0"
                                                        Background="Transparent"
                                                        Padding="8,6"
                                                        Margin="0,1"
                                                        CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Expander Toggle (only for items with children) -->
                                                        <ToggleButton x:Name="Expander"
                                                                      Grid.Column="0"
                                                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                                      ClickMode="Press"
                                                                      Width="16"
                                                                      Height="16"
                                                                      Margin="0,0,4,0"
                                                                      VerticalAlignment="Center"
                                                                      Visibility="{Binding HasChildren, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <ToggleButton.Style>
                                                                <Style TargetType="ToggleButton">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ToggleButton">
                                                                                <Border Background="Transparent">
                                                                                    <materialDesign:PackIcon x:Name="ExpanderIcon"
                                                                                                            Kind="Server"
                                                                                                            Width="16"
                                                                                                            Height="16"
                                                                                                            Foreground="#FF666666"
                                                                                                            HorizontalAlignment="Center"
                                                                                                            VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsChecked" Value="True">
                                                                                        <Setter TargetName="ExpanderIcon" Property="Foreground" Value="#FF0078D4"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ToggleButton.Style>
                                                        </ToggleButton>
                                                        
                                                        <!-- Remote Desktop Icon (only for leaf items without children) -->
                                                        <materialDesign:PackIcon Grid.Column="1"
                                                                                 Kind="RemoteDesktop"
                                                                                 Width="16"
                                                                                 Height="16"
                                                                                 Foreground="#FF666666"
                                                                                 Margin="0,0,8,0"
                                                                                 VerticalAlignment="Center"
                                                                                 Visibility="{Binding IsLeaf, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        
                                                        <!-- Machine Name -->
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding DisplayName}"
                                                                   FontSize="13"
                                                                   FontWeight="Medium"
                                                                   Foreground="#FF2D2D30"
                                                                   VerticalAlignment="Center"/>
                                                        
                                                        <!-- Status Indicator Dot -->
                                                        <Ellipse Grid.Column="3"
                                                                 Width="8"
                                                                 Height="8"
                                                                 Margin="8,0,0,0"
                                                                 VerticalAlignment="Center"
                                                                 HorizontalAlignment="Right">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Fill" Value="#FFF44336"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                                            <Setter Property="Fill" Value="#FF4CAF50"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>
                                                    </Grid>
                                                </Border>
                                                
                                                <!-- Children Container -->
                                                <ItemsPresenter x:Name="ItemsHost"
                                                               Grid.Row="1"
                                                               Margin="20,0,0,0"
                                                               Visibility="Collapsed"/>
                                            </Grid>
                                            
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="True">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#FFE3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#FFF5F5F5"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding HasChildren}" Value="False">
                                                    <Setter TargetName="Expander" Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.Resources>
                        
                        <!-- Hierarchical Data Template -->
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <ContentPresenter Content="{Binding}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Border>
            </Grid>
        </Border>

        <!-- Log Display Area -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                CornerRadius="8"
                Margin="15,0,0,0">
            <Grid>
                <!-- Log Output TextBox -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Padding="10">
                    <TextBlock Text="{Binding LogContent}"
                               FontFamily="Consolas"
                               FontSize="12"
                               Foreground="#FF2D2D30"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <!-- Placeholder when no logs -->
                <TextBlock Text="No logs available. Start monitoring to see live logs."
                           FontSize="14"
                           Foreground="#FF999999"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding HasLogs, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
